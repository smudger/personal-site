---
import BaseLayout from "../layouts/BaseLayout.astro";

const allPosts = await Astro.glob('./posts/*.md');
const title = 'Blog';
---

<BaseLayout title={title}>
		<h1>{title}</h1>

        <ul>
            {allPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
        </ul>
</BaseLayout>
